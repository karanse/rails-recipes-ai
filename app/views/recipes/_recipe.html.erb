<div id="<%= dom_id recipe %>">
  <p>
    <strong>Name:</strong>
    <%= recipe.name %>
  </p>

  <p>
    <strong>Ingredients:</strong>
    <%= recipe.ingredients %>
  </p>
    <%# app/views/recipes/_recipe.html.erb %>
  <p>
    <%= recipe.content %>
  </p>
  <%= cl_image_tag recipe.photo.key, alt: "AI-generated image of the recipe#{recipe.id}" if recipe.photo.attached? %>

</div>
